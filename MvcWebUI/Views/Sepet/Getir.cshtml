@model IEnumerable<SepetElemanModel>

@{
    ViewData["Title"] = "Sepet";
    //Layout = "_YeniLayout"; //yeni bir layout kullanacaksan bunu yapman gerek
}

<p>
    <a asp-action="Temizle">Sepeti Temizle</a>
</p>

@if(Model.Count() == 0)
{
    <p class="text-danger">Kayıt bulunamadı</p>
}
else
{
    <p class="text-success">@Model.Count() kayıt bulundu</p>
}

<table class="table table-hover">
    <thead class="table-secondary">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.UrunAdi)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BirimFiyati)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @Html.DisplayFor(m => item.UrunAdi)
            </td>
            <td>
                @Html.DisplayFor(m => item.BirimFiyati)
            </td>
            <td>
                <a asp-action="Sil" asp-route-urunId="@item.UrunId" asp-route-kullaniciId="@item.KullaniciId">Sepetten Sil</a>
            </td>
            </tr>
        }
    </tbody>


</table>