@model UrunModel

@{
    string imgSrc = "/files/noImage.png";
    if (!string.IsNullOrWhiteSpace(Model.ImgSrcDisplay))
        imgSrc = Model.ImgSrcDisplay;
}

<div>
    <h4>Ürün</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aciklama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BirimFiyatiDisplay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirimFiyatiDisplay)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StokMiktari)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StokMiktari) adet
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SonKullanmaTarihiDisplay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SonKullanmaTarihiDisplay)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KategoriAdiDisplay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KategoriAdiDisplay)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MagazaDisplay)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.Raw(Model.MagazaDisplay)*@ @*bu tek bir string olarak alınırsa*@
            @if(Model.MagazalarDisplay != null && Model.MagazalarDisplay.Count > 0)
            {
                foreach (string magaza in Model.MagazalarDisplay)
                {
                    @magaza
                    <br />
                }
            }
        </dd>
        <dt class = "col-2">
            @Html.DisplayNameFor(model => model.ImgSrcDisplay)
        </dt>
        <dd class = "col-4">
            <img src="@imgSrc" class="img-fluid" />
        </dd>

        
    </dl>
</div>