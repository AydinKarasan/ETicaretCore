@model IEnumerable<MagazaModel>

@{
    ViewData["Title"] = "Mağazalar";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Yeni Mağaza</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanalMiDisplay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puani)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanalMiDisplay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puani)
            </td>
            
            <td>
				<a asp-action="Details" asp-route-id="@item.Id">Detay</a>&nbsp;|&nbsp;
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>&nbsp;|&nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
